<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/review"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/REVIEW_PROFILE_PHOTO"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/REVIEW_PROFILE_NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="박재성"
                android:textColor="#209fc6" />

            <RatingBar
                android:id="@+id/REVIEW_PROFILE_RATING"
                android:layout_width="70dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:stepSize="0.5" 
                style="@style/smallStarRatingBar"/>
            
        </RelativeLayout>

        <TextView
            android:id="@+id/REVIEW_PROFILE_TEXT"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="으아아알마ㅣ너러ㅏㅣㄴㅇ코ㅓㅏ론ㅇ머ㅏ론어ㅏㅗ러ㅏㅁㄴ오ㅓㅏㄻㄴ유회ㅏ롬ㄴ어ㅏㅗㄻㄴ어ㅏㅗㅓㅏㅁㄴㅇㄹ" />
    </LinearLayout>

</LinearLayout>