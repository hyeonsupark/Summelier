<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">27dip</item>
        <item name="android:maxHeight">27dip</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="smallStarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_bar_small</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

</resources>
